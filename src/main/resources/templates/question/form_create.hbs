<!DOCTYPE html>
<html lang="en">

{{> partial/header}}

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
    {{> partial/sidebar}}
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            {{> partial/topbar}}
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">질문등록</h1>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Basic Card Example -->
                        <form action="/questions" method="post">
                            <input type="hidden" name="author" value="{{account.email}}"/>
                            <div class="card h-500 shadow mb-4" style="min-height: 25rem;">
                                <div class="card-header py-3">
                                    <div class="row align-items-center">
                                        <div class="input-group mb-0 col-9">
                                            <input height="20rem" type="text" class="form-control" name="title"
                                                   placeholder="Input Title" aria-label="Input Title"
                                                   aria-describedby="basic-addon2">
                                        </div>
                                        <div class="input-group mb-0 col-3">
                                            <label>{{account.lastName}}</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group shadow-textarea">
                                                <textarea class="form-control z-depth-1" name="contents"
                                                          id="exampleFormControlTextarea6" rows="3"
                                                          placeholder="Write something here..."></textarea>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row justify-content-end">
                                        <input class="btn btn-primary" type="submit" value="글쓰기"/>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
        {{> partial/footer}}
    </div>
    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
{{> partial/logout_modal}}

<!-- Custom scripts for all pages-->
<script src="/js/sb-admin-2.min.js"></script>
</body>
</html>
